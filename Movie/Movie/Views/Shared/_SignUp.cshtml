@model VmLayout

<div class="overlay-form-signUp @(TempData["Failed"] != null ? "open" : "") ">

    <div class="overlay-form-signUp__wrapped">
        <div class="c__form__signUp">
            <h3>Sign Up</h3>
            <form asp-controller="Account" asp-action="Register" method="post">
                @if (TempData["Failed"] != null)
                {
                    <input type="hidden" id="Failed">
                    TempData["Failed"] = null;
                }
                @if (TempData["SuccessRegister"] != null)
                {
                    <input type="hidden" id="SuccessRegister">
                    TempData["SuccessRegister"] = null;
                }
                @if (TempData["RegisterExistError"] != null)
                {
                    <input type="hidden" id="RegisterExistError">
                    TempData["RegisterExistError"] = null;
                }
                <div class="username-email">
                    <label asp-for="@Model.VmRegister.FirstName">FirstName</label>
                    <input asp-for="@Model.VmRegister.FirstName" value="@(TempData["fName"] != null ? TempData["fName"] as string : "")" placeholder="FirstName" required />
                </div>
                <div class="username-email">
                    <label asp-for="@Model.VmRegister.LastName">LastName</label>
                    <input asp-for="@Model.VmRegister.LastName" value="@(TempData["lName"] != null ? TempData["lName"] as string : "")" placeholder="LastName" required />
                </div>
                <div class="username-email">
                    <label asp-for="@Model.VmRegister.Email">Email Address</label>
                    <input asp-for="@Model.VmRegister.Email" value="@(TempData["Email"] != null ? TempData["Email"] as string : "")" placeholder="Email address" required />
                </div>
                <div class="user-password">
                    <label asp-for="@Model.VmRegister.Password">Password</label>
                    <input asp-for="@Model.VmRegister.Password" required />
                </div>
                <button type="submit" id="btn">Sign Up</button>
            </form>
            <div class="close-btn">
                <a href="#" data-close-signup><i class="fas fa-times"></i></a>
            </div>
        </div>
    </div>
</div>

