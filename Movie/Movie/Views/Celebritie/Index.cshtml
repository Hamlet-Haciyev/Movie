@model VmCelebritie
@{
    ViewData["Title"] = "Index";
}

<main>
    <section id="banner">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1>CELEBRITY LIST</h1>
                    <div class="bread"
                         style="--bs-breadcrumb-divider: '>'"
                         aria-label="breadcrumb">
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a asp-controller="Home" asp-action="Index" style="color: #428bca">HOMEPAGE</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                CELEBRITY LIST
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="celebrities">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="celebrities__list">
                        @{
                            foreach (var item in Model.Casts)
                            {
                                <div class="celebritie__about">
                                    <div class="celebritie__image">
                                        <a asp-controller="Celebritie" asp-action="Detail" asp-route-id="@item.Id">
                                            <img src="~/Uploads/@item.Image" alt="no image" style="width: 100.6px; object-fit: cover; object-position: 50% 50%; height: 100%; " />
                                        </a>
                                    </div>
                                    <div class="celebritie__content">
                                        <h4 class="celebritie-name">
                                            <a asp-controller="Celebritie" asp-action="Detail" asp-route-id="@item.Id">@item.Name</a>
                                        </h4>
                                        <p class="celebritie-detail">
                                            @item.BirthPlace
                                        </p>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    <div class="celebrities-pagination">
                        <div class="page-text"><span>Page 1 of 2:</span></div>
                        <ul>
                            <li><a class="active" href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li>
                                <a href="#"><i class="fas fa-chevron-right"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

