
@{
    ViewData["Title"] = "Send";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="Subscribe" asp-action="Send" method="post">
                <div class="form-group row mb-5">
                    <div class="col-sm-12 mb-3">
                        <textarea class="form-control" rows="10" name="MailText" id="Description"></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" style="width:10%;">Send</button>
                <a type="submit" class="btn btn-dark" style="width:10%;" asp-area="admin" asp-controller="Subscribe" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>

