
@{
    ViewData["Title"] = "Send";
    Layout = "~/Areas/admin/Views/Shared/_LayoutMain.cshtml";
}
<main class="main">
    <div class="container-fluid">
        <div class="row">
            <!-- main title -->
            <div class="col-12">
                <div class="main__title">
                    <h2>Send mail message all subsribes</h2>
                </div>
            </div>
            <!-- end main title -->
            <!-- form -->
            <div class="col-12">
                
                <form asp-area="admin" asp-controller="Subscribe" asp-action="Send" class="form" method="post" enctype="multipart/form-data">
                    <div class="row row--form">
                        <div class="col-12 col-md-12 form__content">
                            <div class="row row--form">
                                <div class="col-12">
                                    <textarea id="Description" class="form__textarea ckeditor" placeholder="About" name="MailText"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <button type="submit" class="form__btn">publish</button>
                        </div>
                        <div class="col-12 col-lg-6" style="text-align: end;">
                            <a asp-area="admin" asp-controller="Subscribe" asp-action="Index" type="submit" class="form__btn" style="display: inline-block; line-height: 40px; text-align:center;">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
            <!-- end form -->
        </div>
    </div>
</main>

