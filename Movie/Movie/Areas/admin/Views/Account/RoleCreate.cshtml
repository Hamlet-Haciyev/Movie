@model IdentityRole
@{
    ViewData["Title"] = "RoleCreate";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--begin::Card-->
                <div class="card card-custom gutter-b example example-compact">
                    <div class="card-header">
                        <h3 class="card-title">Create</h3>
                        <div class="card-toolbar">
                            <div class="example-tools justify-content-center">
                                <span class="example-toggle" data-toggle="tooltip" title="View code"></span>
                                <span class="example-copy" data-toggle="tooltip" title="Copy code"></span>
                            </div>
                        </div>
                    </div>
                    <!--begin::Form-->
                    <form class="form" method="post" asp-area="admin" asp-controller="Account" asp-action="RoleCreate">
                        <div class="card-body">

                            <div class="form-group row">
                                <div class="col-lg-6">
                                    <label asp-for="@Model.Name">Name:</label>
                                    <input asp-for="@Model.Name" class="form-control" placeholder="Enter role name" />
                                    <span asp-validation-for="@Model.Name" class="form-text text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-lg-6">
                                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                                    <button type="submit" class="btn btn-secondary" asp-area="admin" asp-controller="Account" asp-action="Roles">Cancel</button>
                                </div>
                                <div class="col-lg-6 text-lg-right">
                                    <button type="reset" class="btn btn-danger">Reset</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!--end::Form-->
                </div>
                <!--end::Card-->
            </div>
        </div>
    </div>
    <!--end::Container-->
</div>

